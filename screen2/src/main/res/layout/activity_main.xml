<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <LinearLayout
        android:id="@+id/login_ll"
        android:gravity="end"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/login_bt"
            style="@style/word_bt"
            android:onClick="loginButton"
            android:text="登录"/>
        <Button
            android:id="@+id/regist_bt"
            style="@style/word_bt"
            android:onClick="registButton"
            android:text="注册"/>
    </LinearLayout>
    <!--开启服务开关-->
    <Switch
        android:id="@+id/screen_service_switch"
        android:layout_below="@id/login_ll"
        android:layout_margin="100dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/text_base"
        android:gravity="left|center_vertical"
        android:text="锁屏服务"/>
    <Button
        android:id="@+id/activity_fanyi_bt"
        android:layout_below="@id/screen_service_switch"
        style="@style/word_bt"
        android:layout_centerHorizontal="true"
        android:onClick="fanyiButton"
        android:text="译"/>
</RelativeLayout>
