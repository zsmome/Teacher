<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--点击背景-->
    <item android:state_pressed="true">
        <shape>
            <!--大小-->
            <size android:width="@dimen/size_button_words" android:height="@dimen/size_button_words"/>
            <!--色值-->
            <solid android:color="#e79429" />
            <!--圆角-->
            <corners android:radius="@dimen/size_button_words" />
        </shape>
    </item>
    <!--默认背景-->
    <item>
        <shape>
            <!--大小-->
            <size android:width="@dimen/size_button_words" android:height="@dimen/size_button_words"/>
            <!--色值-->
            <solid android:color="#d48d31" />
            <!--圆角-->
            <corners android:radius="@dimen/size_button_words" />
        </shape>
    </item>
</selector>