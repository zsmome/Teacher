<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--列表中的按钮-->
    <style name="listview_button">
        <item name="android:focusable">false</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/libao_get_bt</item>
    </style>
    <!--下载-->
    <style name="button_button">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/libao_get_bt</item>
    </style>
    <!--礼包-->
    <style name="title_weekly_item_adapter">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="content_weekly_item_adapter">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="get_bt_weekly_item_adapter">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">#ffffff</item>
    </style>
    <style name="other_weekly_item_adapter">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--开服-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">20sp</item>
    </style>
    <!--父项-->
    <style name="kaifu_elv_group_date_tv">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTheme</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--子项-->
    <style name="kaifu_elv_title_tv">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">top</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="kaifu_elv_date_tv">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorTheme</item>
    </style>
    <style name="kaifu_elv_server_no_tv">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="kaifu_elv_cat_bt">

    </style>
    <style name="kaifu_elv_operator_tv">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">bottom</item>
    </style>
    <!--热门-->
    <style name="iconhot_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <!--特色-->
    <!--上方条-->
    <style name="top_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/colorTheme</item>
    </style>
    <!--透明上方长歌条-->

    <!--中间标题-->
    <style name="top_bar_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--两侧图标-->
    <style name="top_bar_image">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
