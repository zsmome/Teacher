<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.example.day9_homework5.MainActivity">

    <ImageView android:layout_width="50dp" android:layout_height="50dp"
        android:id="@+id/image_iv"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appName_tv"
        android:layout_toRightOf="@id/image_iv"
        android:layout_alignTop="@id/image_iv"
        android:textSize="20sp"
        android:textStyle="bold"/>
        <!--android:text="星际联盟"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_tv"
        android:layout_toRightOf="@id/image_iv"
        android:layout_below="@id/appName_tv"/>
        <!--android:text="特权礼包"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remaintext_tv"
        android:layout_toRightOf="@id/image_iv"
        android:layout_below="@id/title_tv"
        android:text="剩余："/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remain_tv"
        android:layout_toRightOf="@id/remaintext_tv"
        android:layout_alignBottom="@id/remaintext_tv"
        android:textColor="#7CCD7C"/>
        <!--android:text="剩余：50  "/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_tv"
        android:layout_toRightOf="@id/remain_tv"
        android:layout_alignBottom="@id/remain_tv"/>
        <!--android:text="时间：2016-6-16"/>-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:id="@+id/get_bt"
        android:layout_alignParentRight="true"
        android:text="立即领取"
        android:background="#7CCD7C"/>
</RelativeLayout>
