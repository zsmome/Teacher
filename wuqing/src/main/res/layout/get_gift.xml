<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/image_iv"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/gname_tv"
        android:layout_toRightOf="@id/image_iv"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/date_tv"
        android:textColor="#aeccbb"
        android:layout_alignBottom="@+id/image_iv"
        android:layout_toRightOf="@+id/number_tv"
        android:layout_toEndOf="@+id/number_tv" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/number_tv"
        android:layout_alignBaseline="@+id/date_tv"
        android:layout_alignBottom="@+id/date_tv"
        android:layout_toRightOf="@+id/image_iv"
        android:layout_toEndOf="@+id/image_iv" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/giftName_tv"
        android:layout_below="@+id/gname_tv"
        android:layout_toRightOf="@+id/image_iv"
        android:layout_toEndOf="@+id/image_iv"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_bt"
        android:text="立即获取"
        android:focusable="false"
        android:background="#65ac88"
        android:layout_alignBottom="@+id/giftName_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
