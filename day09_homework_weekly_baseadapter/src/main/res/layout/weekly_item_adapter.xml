<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:id="@+id/imgIv"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:src="@mipmap/ic_launcher"/>
     <TextView
         android:id="@+id/titleTv"
         android:layout_toRightOf="@id/imgIv"
         android:layout_width="100dp"
         android:layout_height="25dp"
         style="@style/title_weekly_item_adapter"
         android:text="星际联盟"/>
    <TextView
        android:id="@+id/contentTv"
        android:layout_toRightOf="@id/imgIv"
        android:layout_below="@id/titleTv"
        android:layout_width="150dp"
        android:layout_height="30dp"
        style="@style/content_weekly_item_adapter"
        android:text="特权礼包"/>
    <Button
        android:id="@+id/getBt"
        android:focusable="false"
        android:layout_below="@id/titleTv"
        android:layout_alignParentRight="true"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/get_bt"
        android:text="立即领取"/>
    <TextView
        android:id="@+id/remainTv"
        android:layout_toRightOf="@id/imgIv"
        android:layout_below="@id/contentTv"
        android:layout_width="70dp"
        android:layout_height="25dp"
        style="@style/other_weekly_item_adapter"
        android:text="剩余：50"/>
    <TextView
        android:id="@+id/timeTv"
        android:layout_toRightOf="@id/remainTv"
        android:layout_below="@id/contentTv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        style="@style/other_weekly_item_adapter"
        android:text="时间：2017-4-14"/>
</RelativeLayout>