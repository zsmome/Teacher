<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto">
    <!--下载 -->
    <RelativeLayout
        android:id="@+id/down_rl"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTheme"/>
        <Button
            android:id="@+id/kaifu_info_down_bt"
            android:focusable="false"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            style="@style/button_button"
            android:text="立即下载"/>
    </RelativeLayout>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_above="@id/down_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--滚动内容-->
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.zsmome.project_libaojinlin.fragments.youxi.KaifuInfoActivity">
                <!--上方条-->
                <!--上方条-->
                <RelativeLayout
                    android:id="@+id/kaifu_info_top"
                    style="@style/top_bar">
                    <!--回退-->
                    <ImageView
                        android:id="@+id/kaifu_info_top_back_iv"
                        android:src="@mipmap/back"
                        android:onClick="back"
                        style="@style/top_bar_image"/>
                    <!--分享-->
                    <ImageView
                        android:id="@+id/kaifu_info_top_share_iv"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/share"
                        android:onClick="share"
                        style="@style/top_bar_image"/>
                    <!--标题文字-->
                    <TextView
                        android:id="@+id/kaifu_info_top_title_tv"
                        android:layout_toRightOf="@id/kaifu_info_top_back_iv"
                        android:layout_toLeftOf="@id/kaifu_info_top_share_iv"
                        style="@style/top_bar_title"
                        android:text="立一片天独立一片天独立一片天独立一片天"/>
                </RelativeLayout>
                <!--应用简要-->
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/kaifu_info_breif"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/kaifu_info_top"
                    android:layout_margin="10dp"
                    xmlns:tools="http://schemas.android.com/tools">
                    <!--图标-->
                    <ImageView
                        android:id="@+id/kaifu_info_icon_iv"
                        android:layout_width="60dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/youxi"/>
                    <!--标题-->
                    <TextView
                        android:id="@+id/kaifu_info_title_tv"
                        android:layout_toRightOf="@id/kaifu_info_icon_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        style="@style/kaifu_elv_title_tv"
                        android:text="皇图"/>
                    <!--类型-->
                    <TextView
                        android:id="@+id/kaifu_info_type_tv"
                        android:layout_toRightOf="@id/kaifu_info_icon_iv"
                        android:layout_below="@id/kaifu_info_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="类型:角色扮演"/>
                    <!--大小-->
                    <TextView
                        android:id="@+id/kaifu_info_size_tv"
                        android:layout_toRightOf="@id/kaifu_info_icon_iv"
                        android:layout_below="@id/kaifu_info_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:text="大小:未知"/>
                </RelativeLayout>
                <!--应用图片-->
                <android.support.v4.view.ViewPager
                    android:id="@+id/kaifu_info_vp"
                    android:layout_below="@id/kaifu_info_breif"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
                </android.support.v4.view.ViewPager>
                <!--游戏介绍-->
                <TextView
                    android:id="@+id/kaifu_info_introduce_tv"
                    android:layout_below="@id/kaifu_info_vp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="游戏介绍"/>
                <TextView
                    android:id="@+id/kaifu_info_desc_tv"
                    android:layout_below="@id/kaifu_info_introduce_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <!--下载按钮-->
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>