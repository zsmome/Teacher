<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context="com.zsmome.project_libaojinlin.fragments.tese.BdxqsInfoActivity">
        <!--上方条-->
        <RelativeLayout
            android:id="@+id/bdxqs_info_top"
            style="@style/top_bar">
            <!--回退-->
            <ImageView
                android:id="@+id/bdxqs_info_top_back_iv"
                android:src="@mipmap/back"
                android:onClick="back"
                style="@style/top_bar_image"/>
            <!--分享-->
            <ImageView
                android:id="@+id/bdxqs_info_top_share_iv"
                android:layout_alignParentRight="true"
                android:src="@mipmap/share"
                android:onClick="share"
                style="@style/top_bar_image"/>
            <!--标题文字-->
            <TextView
                android:id="@+id/bdxqs_info_top_title_tv"
                android:layout_toRightOf="@id/bdxqs_info_top_back_iv"
                android:layout_toLeftOf="@id/bdxqs_info_top_share_iv"
                style="@style/top_bar_title"
                android:text="立一片天独立一片天独立一片天独立一片天"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/tese_bdxqs_info_fl"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_below="@id/bdxqs_info_top"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="20dp"
            android:background="@color/colorBackground"
            xmlns:tools="http://schemas.android.com/tools">
            <ImageView
                android:id="@+id/tese_bdxqs_info_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2b333b"
                android:src="@mipmap/tese"/>
            <TextView
                android:id="@+id/tese_bdxqs_info_date_tv"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="16sp"
                android:paddingTop="6dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorBackground"
                tools:text="2017-4-24"/>
        </FrameLayout>
        <!--导读-->
        <TextView
            android:id="@+id/tese_bdxqs_info_introduction_tv"
            android:layout_below="@id/tese_bdxqs_info_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是内容"/>
        <!--游戏下列表 GridView-->
        <com.zsmome.project_libaojinlin.views.SolveConfictGridView
            android:id="@+id/tese_bdxqs_info_gv"
            android:layout_below="@id/tese_bdxqs_info_introduction_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="4"
            android:stretchMode="columnWidth"/>
    </RelativeLayout>
</ScrollView>