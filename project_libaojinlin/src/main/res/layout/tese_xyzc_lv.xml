<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@color/colorBackground"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/tese_xyzc_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2b333b"
        android:src="@mipmap/tese"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/colorTeseBackground">
        <TextView
            android:id="@+id/tese_xyzc_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/colorBackground"
            android:textStyle="bold"
            tools:text="新游周刊第80期"/>
        <ImageView
            android:id="@+id/tese_xyzc_icon_iv"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            tools:src="@mipmap/tese"/>
    </RelativeLayout>
</FrameLayout>