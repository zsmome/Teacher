<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.zsmome.project_libaojinlin.fragments.tese.TeseFragment">
    <!--特色标签-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tese_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorBackground"
        app:tabTextColor="@color/colorTheme"
        app:tabSelectedTextColor="@color/colorTheme"
        app:tabIndicatorColor="@color/colorTheme"
        app:tabTextAppearance="@style/TabLayoutTextStyle"/>
    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorTheme"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/tese_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
